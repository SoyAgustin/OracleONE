
public class EjemploCondicionales2 {
	public static void main(String[] args) {

		int edad = 28;
		int cantidadPersonas = 2;

		if (edad >= 18 || cantidadPersonas >=2) {
			System.out.println("Puede entrar");
		} else {
				System.out.println("No puede entrar");
		}
	}
}
